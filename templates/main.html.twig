<html lang="nl">
<head>
    <title>het is verrukkuluk! :: {{ TITEL }} </title>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8"/>

    <link rel="stylesheet" type="text/css" href="assets/bootstrap/css/bootstrap.css" />
    <link rel="stylesheet" type="text/css" href="assets/css/fonts.css" />
    <link rel="stylesheet" type="text/css" href="assets/css/fontawesome.css" />

    <link rel="stylesheet" type="text/css" href="assets/css/main.css" />

    <script type="text/javascript" language="javascript" src="assets/jquery/jquery-3.5.1.js"></script>
    <script type="text/javascript" language="javascript" src="assets/bootstrap/js/bootstrap.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-Fy6S3B9q64WdZWQUiU+q4/2Lc9npb8tCaSX9FK7E8HnRr0Jz8D6OP9dO5Vg3Q9ct" crossorigin="anonymous"></script>

</html>
<body>
<div class="container-fluid">

    <div class="row">
        <div class="col-md-12">
            <div class="navigation_sander">
                <a href="?action=homepage"><img src="assets/img/logo-v2.png" class="logo" alt="Homepage"></a>
                
                {% block header %}
                <div id="hero-carousel" class="carousel slide" data-ride="carousel">
                    <ol class="carousel-indicators">
                        <li data-target="#hero-carousel" data-slide-to="0" class="active"></li>
                        <li data-target="#hero-carousel" data-slide-to="1"></li>
                        <li data-target="#hero-carousel" data-slide-to="2"></li>
                    </ol>
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img src="https://www.linda.nl/lindanl-assets/uploads/2022/10/13094142/vroeg-eten-Cropped-1800x1012.jpg" class="d-block w-100 recipe_img" alt="...">
                        </div>
                        <div class="carousel-item">
                            <img src="https://sunnyhealthfitness.com/cdn/shop/articles/orange-cream-smoothie-bowl-recipe-01.jpg?v=1599840488" class="d-block w-100 recipe_img" alt="...">
                        </div>
                        <div class="carousel-item">
                            <img src="https://media.vietravel.com/images/news/italian-cuisine.jpg" class="d-block w-100 recipe_img" alt="...">
                        </div>
                    </div>
                </div>
                {% endblock %}
                

                <div class="hamburger-menu">
                    <div class="fas fa-bars menu-trigger">
                        <div class="dropdown">
                            <div class="row">
                                <div class="col-md-4">
                                    <a href="?action=homepage"><img src="assets/img/logo-v2.png" class="logo-dropdown" alt="Homepage"></a>
                                </div>
                                <div class="col-md-4">
                                    <a class="menu-headers">Mijn Favorieten</a>
                                </div>
                                <div class="col-md-4">
                                    <a class="menu-headers">Mijn Boodschappenlijst</a>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4">
            <div class="column-left">
                <div class="agenda">
                    <img src="assets/img/verrukkulluk-agenda.png" style="width:150;"><br>
                    {% for i in range(0,4)%}
                        <div class="row workshop">
                            <i class="col-md-3 far fa-calendar" style="font-size:2.5rem; color:#FFF;"></i>
                            <h4 class="col-md-9" style="color:#000;margin-bottom:0;">Vegetarisch koken</h4>
                            <div class="col-md-3"></div>
                            <div class="col-md-9" style="font-size:0.7rem">Een workshop vegetarisch koken, onder leiding van Trientje Hupsakee</div>
                        </div>
                    {% endfor %}
                </div>
                <div class="log-in">
                    <img src="assets/img/verrukkulluk-login.png" style="width:150;">
                    <form>
                        <div class="form-field">
                            <label for="exampleInputEmail1">Email</label><br>
                            <input type="email" id="exampleInputEmail1" class="input-field">
                        </div>
                        <div class="form-field">
                            <label for="exampleInputPassword1">Password</label><br>
                            <input type="password" id="exampleInputPassword1" class="input-field">
                        </div>
                        <br>
                        <button type="submit" class="button" style="background-color: var(--darker-orange); width:50%; font-size:2rem;">Login</button>
                    </form>
                
                </div>
            </div>
        
        </div>
        <div class="col-md-8">
            <div class="main">
                {%  block content %}
                {%  endblock %}
            </div>
        </div>
    </div>


    
    <div class="footer_sander">
        <img src="assets/img/verrukkulluk-pay-off.png" style="width:100; margin-right:30;"/>
        <img src="assets/img/verrukkulluk-contact.png" style="width:150"/>
        
        <p class="footer_sander__p">
            Verrukkulluk.nl <br>
            Poststraat 2b  <br>
            Sittard <br>
            info@verrukkulluk.nl
        </p>
    </div>
    


</div>

</body>

{# Opnemen van de "Main" file #}
{% extends "main.html.twig" %}

{% block header %}
    {{parent()}} 
{# <img src="assets/img/logo-v2.png"/> #}
{% endblock %} 


{# nu de block content op in de main pagina vullen #}
{% block content %}
    


{# Loop #}
    <div class="row">
    {% for record in data %}

        <div class="col-md-6";>
            <div  class="card" style="margin-bottom:50px">
                <img src={{record.afbeelding}} class="card-img-top recipe_img" style="width:100%; height:200px" alt="...">
                <div class="card-body">
                    <h5 class="card-title" style="color:var(--lighter-green)">{{record.titel}}</h5>
                    <p class="card-text">{{record.lange_omschrijving}}</p>
                    <a href="#" class="btn btn-danger">Smullen!</a>
                </div>
            </div>
        </div>

    {% endfor %}
    
     {# Dump #}
       {# <pre>
        {{ dump(data) }}
       </pre> #}
    

{% endblock %}
